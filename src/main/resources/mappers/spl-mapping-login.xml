<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bgapp">
    <resultMap type="java.util.HashMap" id="statusMap">
        <result column="account_id" property="accountId"/>
    </resultMap>
    <select id="login_by_username" resultMap="statusMap">
        SELECT
            ACCOUNT_ID,
            ACCOUNT_NAME,
            MOBILE
        FROM
            bg_account_info
        WHERE ACCOUNT_ID = #{username}
    </select>
</mapper>