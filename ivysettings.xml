<ivysettings>
    <settings defaultResolver="chained"/>
    <resolvers>
        <chain name="chained" returnFirst="true">
            <filesystem name="libraries">
                <artifact pattern="${ivy.conf.dir}/repository/[module]-[revision].[ext]"/>
            </filesystem>
            <url name="mirror">
                <artifact pattern="${ivy.repository.url}/[organisation]/[module]/[revision]/[module]-[revision].[ext]"/>
            </url>
        </chain>
    </resolvers>
</ivysettings>